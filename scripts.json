{
    "$schema": "https://deno.land/x/denon/schema.json",
    "scripts": {
        "dev": {
            "cmd": "deno run -A --inspect main.ts",
            "desc": "Run in debug mode",
            "watch": true
        },
        "run": {
            "cmd": "deno run --allow-net --allow-read --allow-env main.ts",
            "desc": "Run in production mode"
        }
    }
}